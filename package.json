{
  "name": "@openapi-io-ts/root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build && yarn fix-bin-permission",
    "test": "jest",
    "lint": "eslint",
    "examples:generate": "lerna run generate --scope @openapi-io-ts/example*",
    "examples:type-check": "lerna run type-check --scope @openapi-io-ts/example*",
    "sanity-check": "yarn test && yarn build && yarn lint && yarn examples:generate && yarn examples:type-check",
    "version": "lerna version --conventional-commits",
    "fix-bin-permission": "chmod +x node_modules/.bin/openapi-io-ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-fp-ts": "^0.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  },
  "version": "0.1.0"
}
